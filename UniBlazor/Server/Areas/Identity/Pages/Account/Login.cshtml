@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1 class="text-center text-primary">@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4 offset-4">
        <section>
            <form id="account" method="post">
                <h4 class="text-center">Realize o login!</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email">E-mail</label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password">Senha</label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
                <div class="form-group">
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registre-se</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>
