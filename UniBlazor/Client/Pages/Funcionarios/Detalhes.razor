@page "/funcionarios/detalhes/{id}"
@inject IFuncionarioRepository funcionarioRepository
@inject NavigationManager navigation

<h3 class="text-primary mb-2">Detalhes Funcionário</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nome
        </dt>
        <dd class="col-sm-10">
            @funcionario.Nome
        </dd>
        <dt class="col-sm-2">
            CPF
        </dt>
        <dd class="col-sm-10">
            @funcionario.Cpf
        </dd>
        <dt class="col-sm-2">
            Data de Nascimento
        </dt>
        <dd class="col-sm-10">
            @funcionario.Data_nascimento.GetValueOrDefault().ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            E-mail
        </dt>
        <dd class="col-sm-10">
            @funcionario.Email
        </dd>
        <dt class="col-sm-2">
            Telefone
        </dt>
        <dd class="col-sm-10">
            @funcionario.Telefone.Telefones
        </dd>
        <dt class="col-sm-2">
            Cargo
        </dt>
        <dd class="col-sm-10">
            @funcionario.Cargo
        </dd>
        <dt class="col-sm-2">
            Salário
        </dt>
        <dd class="col-sm-10">
            R$ @funcionario.Salario
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @funcionario.Status
        </dd>
        <dt class="col-sm-2">
            CEP
        </dt>
        <dd class="col-sm-10">
            @funcionario.Endereco.Cep
        </dd>
        <dt class="col-sm-2">
            Rua
        </dt>
        <dd class="col-sm-10">
            @funcionario.Endereco.Rua
        </dd>
        <dt class="col-sm-2">
            Número
        </dt>
        <dd class="col-sm-10">
            @funcionario.Endereco.Numero
        </dd>
        <dt class="col-sm-2">
            Bairro
        </dt>
        <dd class="col-sm-10">
            @funcionario.Endereco.Bairro
        </dd>
        <dt class="col-sm-2">
            Cidade
        </dt>
        <dd class="col-sm-10">
            @funcionario.Endereco.Cidade
        </dd>
        <dt class="col-sm-2">
            Estado
        </dt>
        <dd class="col-sm-10">
            @funcionario.Endereco.Estado
        </dd>
    </dl>
</div>
<div>
    <a href="/funcionarios/editar/@funcionario.Cpf" class="btn btn-success">Editar</a>
    <a href="/funcionarios" class="btn btn-primary">Voltar</a>
</div>

@code {
    Funcionario funcionario = new Funcionario();
    [Parameter] public string id { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        funcionario = await funcionarioRepository.GetFuncionario(id);
    } 
 }
