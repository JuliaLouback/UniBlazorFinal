@page "/fornecedores/detalhes/{id:int}"
@inject IFornecedorRepository fornecedorRepository
@inject NavigationManager navigation

<h3 class="text-primary mb-2">Detalhes Fornecedor</h3>


<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nome
        </dt>
        <dd class="col-sm-10">
            @fornecedor.Nome_empresa
        </dd>
        <dt class="col-sm-2">
            E-mail
        </dt>
        <dd class="col-sm-10">
            @fornecedor.Email
        </dd>
        <dt class="col-sm-2">
            CNPJ
        </dt>
        <dd class="col-sm-10">
            @fornecedor.Cnpj
        </dd>
        <dt class="col-sm-2">
            Inscrição Estadual
        </dt>
        <dd class="col-sm-10">
            @fornecedor.Inscricao_estadual
        </dd>
        <dt class="col-sm-2">
            Inscrição Municipal
        </dt>
        <dd class="col-sm-10">
            @fornecedor.Inscricao_municipal
        </dd>
        <dt class="col-sm-2">
            Telefone
        </dt>
        <dd class="col-sm-10">
            @fornecedor.Telefone.Telefones
        </dd>
        <dt class="col-sm-2">
            CEP
        </dt>
        <dd class="col-sm-10">
            @fornecedor.Endereco.Cep
        </dd>
        <dt class="col-sm-2">
            Rua
        </dt>
        <dd class="col-sm-10">
            @fornecedor.Endereco.Rua
        </dd>
        <dt class="col-sm-2">
            Número
        </dt>
        <dd class="col-sm-10">
            @fornecedor.Endereco.Numero
        </dd>
        <dt class="col-sm-2">
            Bairro
        </dt>
        <dd class="col-sm-10">
            @fornecedor.Endereco.Bairro
        </dd>
        <dt class="col-sm-2">
            Cidade
        </dt>
        <dd class="col-sm-10">
            @fornecedor.Endereco.Cidade
        </dd>
        <dt class="col-sm-2">
            Estado
        </dt>
        <dd class="col-sm-10">
            @fornecedor.Endereco.Estado
        </dd>
    </dl>
</div>
<div>
    <a href="/fornecedores/editar/@fornecedor.Telefone_Id_telefone" class="btn btn-success">Editar</a>
    <a href="/fornecedores" class="btn btn-primary">Voltar</a>
</div>

@code {
    Fornecedor fornecedor = new Fornecedor();
    [Parameter] public int id { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        fornecedor = await fornecedorRepository.GetFornecedor(id);
    }
}
